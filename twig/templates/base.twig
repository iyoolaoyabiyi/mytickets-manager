<!doctype html>
<html lang="en" data-theme="{{ theme|default('light') }}">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="{{ meta.description|default('myTickets Manager keeps your support tickets organised, prioritised, and easy to resolve.') }}">
    <meta name="theme-color" content="{{ meta.theme_color|default('#f5f6ff') }}">
    {% if meta.canonical is defined %}
      <link rel="canonical" href="{{ meta.canonical }}">
    {% endif %}
  <link rel="icon" type="image/svg+xml" href="{{ asset_base_url|default('/assets/') ~ 'media/icons/ticket.svg' }}" />
    <title>{{ meta.title|default('myTickets Manager') }}</title>
  <link rel="stylesheet" href="{{ asset_base_url|default('/assets/') ~ 'styles/style.css' }}">
    {% block head_extra %}{% endblock %}
  </head>
  <body data-page="{{ page_id|default('') }}">
    <a href="#main-content" class="c-skiplink">{{ copyGlobal.a11y.skipLink }}</a>
    {% include 'partials/header.twig' %}
    <main id="main-content" data-props="{{ page_props|default({})|json_encode|e('html_attr') }}">
      {% block content %}{% endblock %}
    </main>
    {% include 'partials/footer.twig' %}
    {% include 'partials/toast.twig' %}
    {% block page_scripts %}{% endblock %}
    <script id="ticket-app-config" type="application/json">
      {{ {
        'copyGlobal': copyGlobal,
        'page': {
          'id': page_id|default(''),
          'props': page_props|default({})
        }
      }|json_encode|raw }}
    </script>
  <script type="module" src="{{ asset_base_url|default('/assets/') ~ 'scripts/app.js' }}"></script>
  </body>
</html>
