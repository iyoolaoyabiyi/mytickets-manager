<header class="c-header" data-component="header">
  <div class="c-header__inner">
    <a href="/" class="c-header__brand">{{ copyGlobal.app.name }}</a>
    <div class="l-cluster">
      <button
        class="c-header__toggle"
        type="button"
        aria-controls="primary-nav"
        aria-expanded="false"
        aria-label="{{ copyGlobal.nav.toggle.open }}"
        data-action="toggle-nav"
      >
        <span class="sr-only">{{ copyGlobal.nav.toggle.open }}</span>
      </button>
      <button
        class="c-button c-button--secondary hidden md:inline-flex"
        type="button"
        data-action="toggle-theme"
      >
        {{ copyGlobal.theme.toggle|replace({'{app.theme}': 'Dark'}) }}
      </button>
    </div>
    <nav id="primary-nav" class="c-header__nav" aria-label="Primary" data-nav>
      {% if is_auth %}
        <a href="/dashboard" class="c-header__link" data-nav-link>{{ copyGlobal.nav.dashboard }}</a>
        <a href="/tickets" class="c-header__link" data-nav-link>{{ copyGlobal.nav.tickets }}</a>
        <button class="c-header__link" type="button" data-action="logout">{{ copyGlobal.nav.logout }}</button>
      {% else %}
        <a href="/auth/login" class="c-header__link" data-nav-link>{{ copyGlobal.nav.login }}</a>
        <a href="/auth/signup" class="c-header__link" data-nav-link>{{ copyGlobal.nav.signup }}</a>
      {% endif %}
      <button
        class="c-button c-button--secondary md:hidden"
        type="button"
        data-action="toggle-theme"
      >
        {{ copyGlobal.theme.toggle|replace({'{app.theme}': 'Dark'}) }}
      </button>
    </nav>
  </div>
</header>
