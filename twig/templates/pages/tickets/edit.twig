{% extends 'base.twig' %}
{% set c = copyTicketEdit %}
{% block content %}
<section class="l-container py-2xl l-stack">
  {% include 'partials/page_header.twig' with { title: c.title } %}
  <nav class="c-breadcrumb" aria-label="Breadcrumb">
    <a class="underline" href="{{ path_base|default('') }}/tickets">Tickets</a>
    <span class="c-breadcrumb__sep">/</span>
    <span>#{{ ticket.id }}</span>
  </nav>

  <section class="c-card l-stack max-w-xl">
    <div class="c-field">
      <label for="e-title" class="c-field__label">{{ c.form.labels.title }}</label>
      <input id="e-title" class="c-field__control" value="{{ ticket.title }}" />
    </div>
    <div class="c-field">
      <label for="e-desc" class="c-field__label">{{ c.form.labels.description }}</label>
      <textarea id="e-desc" class="c-field__control" rows="6">{{ ticket.description }}</textarea>
    </div>
    <div class="c-field">
      <label for="e-status" class="c-field__label">{{ c.form.labels.status }}</label>
      <select id="e-status" class="c-field__control">
        <option value="open" {% if ticket.status == 'open' %}selected{% endif %}>open</option>
        <option value="in_progress" {% if ticket.status == 'in_progress' %}selected{% endif %}>in_progress</option>
        <option value="closed" {% if ticket.status == 'closed' %}selected{% endif %}>closed</option>
      </select>
    </div>
    <div class="c-field">
      <label for="e-priority" class="c-field__label">{{ c.form.labels.priority }}</label>
      <select id="e-priority" class="c-field__control">
        <option value="high" {% if ticket.priority == 'high' %}selected{% endif %}>High</option>
        <option value="medium" {% if ticket.priority == 'medium' %}selected{% endif %}>Medium</option>
        <option value="low" {% if ticket.priority == 'low' %}selected{% endif %}>Low</option>
      </select>
    </div>
    <div class="c-modal__actions">
      <button class="c-button c-button--primary">{{ c.form.actions.update }}</button>
      <a class="c-button c-button--secondary" href="{{ path_base|default('') }}/tickets">{{ c.form.actions.cancel }}</a>
    </div>
  </section>
</section>
{% endblock %}
