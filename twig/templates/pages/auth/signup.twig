{% extends 'base.twig' %}
{% set c = copySignup %}
{% block content %}
<section class="c-auth-card l-stack" data-page="signup">
  <header class="c-page-header">
    <h1 class="c-page-header__title">{{ c.heading }}</h1>
    <p class="c-page-header__subtitle">{{ c.tagline }}</p>
  </header>
  <form class="c-auth-card__form" novalidate data-auth-form="signup">
    <h2 class="c-modal__title">{{ c.title }}</h2>
    <div class="c-auth-card__fields">
      <div class="c-field">
        <label for="signup-name" class="c-field__label">{{ c.form.labels.name }}</label>
        <input
          id="signup-name"
          name="name"
          type="text"
          placeholder="{{ c.form.placeholders.name }}"
          class="c-field__control"
          autocomplete="name"
        />
        <p class="c-field__message" id="signup-name-error" hidden></p>
      </div>
      <div class="c-field">
        <label for="signup-email" class="c-field__label">{{ c.form.labels.email }}</label>
        <input
          id="signup-email"
          name="email"
          type="email"
          placeholder="{{ c.form.placeholders.email }}"
          class="c-field__control"
          autocomplete="email"
        />
        <p class="c-field__message" id="signup-email-error" hidden></p>
      </div>
      <div class="c-field">
        <label for="signup-password" class="c-field__label">{{ c.form.labels.password }}</label>
        <input
          id="signup-password"
          name="password"
          type="password"
          placeholder="{{ c.form.placeholders.password }}"
          class="c-field__control"
          autocomplete="new-password"
        />
        <p class="c-field__message" id="signup-password-error" hidden></p>
      </div>
      <div class="c-field">
        <label for="signup-confirm" class="c-field__label">{{ c.form.labels.confirm }}</label>
        <input
          id="signup-confirm"
          name="confirm"
          type="password"
          placeholder="{{ c.form.placeholders.confirm }}"
          class="c-field__control"
          autocomplete="new-password"
        />
        <p class="c-field__message" id="signup-confirm-error" hidden></p>
      </div>
    </div>
    <p class="c-alert" id="signup-form-error" hidden></p>
    <div class="c-auth-card__actions">
      <button class="c-button c-button--primary" type="submit" data-button="submit">{{ c.form.submit }}</button>
      <p class="c-auth-card__switch">
        <a href="{{ path_base|default('') }}/auth/login">{{ c.links.switch }}</a>
      </p>
    </div>
  </form>
  <p class="c-auth-card__hint">{{ c.postSignup }}</p>
</section>
{% endblock %}
