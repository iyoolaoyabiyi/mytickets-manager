{% extends 'base.twig' %}
{% set c = copyLanding %}
{% block content %}
<section class="c-hero">
  <div class="c-hero__inner">
    <h1 class="c-hero__title">{{ c.hero.title }}</h1>
    <p class="c-hero__subtitle">{{ c.hero.subtitle }}</p>
    <div class="c-hero__actions">
      <a href="/auth/signup" class="c-button c-button--primary">{{ c.hero.primaryCta }}</a>
      <a href="/auth/login" class="c-button c-button--secondary">{{ c.hero.secondaryCta }}</a>
    </div>
  </div>
  <img src="/assets/media/{{ c.hero.media.wave }}" class="c-hero__wave" alt="" />
  <img src="/assets/media/{{ c.hero.media.decorativeCircle }}" class="c-hero__decor" alt="" />
</section>

<section class="l-container l-stack py-2xl">
  <div class="l-grid-3">
    {% for f in c.features %}
      <article class="c-feature-card">
        <img src="/assets/media/{{ f.icon }}" class="c-feature-card__icon" alt="" />
        <h3 class="c-feature-card__title">{{ f.title }}</h3>
        <p class="c-feature-card__body">{{ f.body }}</p>
      </article>
    {% endfor %}
  </div>
</section>

<section class="l-container l-stack py-2xl">
  <div class="l-grid-3">
    {% for s in c.howItWorks %}
      <article class="c-how-step">
        <h3 class="c-how-step__title">{{ s.title }}</h3>
        <p class="c-how-step__body">{{ s.body }}</p>
      </article>
    {% endfor %}
  </div>
</section>
{% endblock %}
