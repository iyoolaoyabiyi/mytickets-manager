{
	"dependencies": {
		"@tailwindcss/postcss": "^4.1.16",
		"postcss": "^8.5.6",
		"postcss-loader": "^8.2.0",
		"tailwindcss": "^4.1.16"
	},
	"scripts": {
		"compile-css": "../scripts/with-node.sh ./node_modules/.bin/tailwindcss -i ./packages/styles/app.css -o ./packages/styles/style.css --watch",
		"build:css": "../scripts/with-node.sh ./node_modules/.bin/tailwindcss -i ./packages/styles/app.css -o ./packages/styles/style.css",
		"build:js": "../scripts/with-node.sh node_modules/.bin/esbuild packages/assets/scripts/app.ts --bundle --format=esm --platform=browser --target=es2020 --outfile=packages/assets/scripts/app.js",
		"build": "npm run build:css && npm run build:js",
		"dev": "npm-run-all --parallel compile-css build:js -- --watch"
	},
	"devDependencies": {
		"@tailwindcss/cli": "^4.1.16",
		"esbuild": "^0.21.5",
		"npm-run-all": "^4.1.5"
	}
}
